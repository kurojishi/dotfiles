# bash aliases 
#alias ls="ls --color -Fh"
alias ll="ls -l"
alias la="ls -a"
alias lla="ls -al"
alias cp="cp -v"
alias mv="mv -v"
alias grepp="grep * --color=auto -H -n -r -e "
alias grep="grep --color=auto"
alias brackets="nl -ba $1 | egrep --color=always '[{}]'"
alias glog='git log --pretty=oneline'

alias brc=brazil-recursive-cmd
alias infh=get_host_detail
alias vim-packer-sync="rm -f /home/kurojishi/.config/lvim/plugin/packer_compiled.lua && vim -c 'autocmd User PackerComplete quitall' -c 'PackerSync'"
alias cat='bat --style=plain'
