# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.
# see /usr/share/doc/bash/examples/startup-files for examples.
# the files are located in the bash-doc package.

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
#umask 022

# if running bash
if [ -n "$BASH_VERSION" ]; then
	# include .bashrc if it exists
	if [ -f "{{ .chezmoi.homeDir }}/.bashrc" ]; then
		. "{{ .chezmoi.homeDir }}/.bashrc"
	fi
fi

# set PATH so it includes user's private bin if it exists
if [ -d "{{ .chezmoi.homeDir }}/bin" ]; then
	PATH="{{ .chezmoi.homeDir }}/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "{{ .chezmoi.homeDir }}/.local/bin" ]; then
	PATH="{{ .chezmoi.homeDir }}/.local/bin:$PATH"
fi

if [ -e {{ .chezmoi.homeDir }}/.nix-profile/etc/profile.d/nix.sh ]; then . {{ .chezmoi.homeDir }}/.nix-profile/etc/profile.d/nix.sh; fi # added by Nix installer

export PYENV_ROOT="{{ .chezmoi.homeDir }}/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init --path)"
. "{{ .chezmoi.homeDir }}/.cargo/env"
export JAVA_TOOLS_OPTIONS="-Dlog4j2.formatMsgNoLookups=true"
export KITTY_CONFIG_DIRECTORY={{ .chezmoi.homeDir }}/.config/kitty/

XMODIFIERS=@im=fcitx
QT_IM_MODULE=fcitx
GTK_IM_MODULE=fcitx
GLFW_IM_MODULE=ibus
